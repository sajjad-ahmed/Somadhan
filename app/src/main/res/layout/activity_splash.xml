<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000B26"
    tools:context="com.droiddigger.somadhan.Splash">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="256dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/icon" />



    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.DoubleBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        app:SpinKit_Color="@color/md_white_1000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spin_kit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:letterSpacing=".2"
        android:text="Syncing....\nWe are making sure \nthe fastest experience"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spin_kit"
        android:gravity="center"
        android:textColor="@color/md_blue_grey_50"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="Developed by"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/droiddigger_white" />
</RelativeLayout>
